<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.ivolunteerapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".IVoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TelaInicialActivity"
                  android:theme="@style/AppTheme.Toolbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".DebugActivity" />
        <activity
                android:name=".MainActivity"
                android:theme="@style/AppTheme.Toolbar">
        </activity>
        <activity
                android:name=".OngListActivity"
                android:theme="@style/AppTheme.Toolbar">
        </activity>
        <activity
                android:name=".OngActivity"
                android:theme="@style/AppTheme.Toolbar"
                android:parentActivityName=".OActivity">
        </activity>
        <activity
                android:name=".VActivity"
                android:theme="@style/AppTheme.Toolbar">
        </activity>
        <activity
                android:name=".OActivity"
                android:theme="@style/AppTheme.Toolbar">
        </activity>
        <activity
                android:name=".SobreActivity"
                android:theme="@style/AppTheme.Toolbar">
        </activity>
        <activity
                android:name=".OngOffActivity"
                android:theme="@style/AppTheme.Toolbar">
        </activity>
        <activity
                android:name=".VoluntarioListActivity"
                android:theme="@style/AppTheme.Toolbar">
        </activity>
        <activity
                android:name=".VoluntarioOffActivity"
                android:theme="@style/AppTheme.Toolbar">
        </activity>
        <activity
                android:name=".VoluntarioActivity"
                android:theme="@style/AppTheme.Toolbar"
                android:parentActivityName=".VActivity">
        </activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/layourMenuLateral"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fitsSystemWindows="true">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".TelaInicialActivity">

        <include layout="@layout/toolbar"/>
        <ImageView
                android:id="@+id/imageView"
                android:layout_width="184dp"
                android:layout_height="183dp"
                android:layout_marginEnd="114dp"
                android:layout_marginStart="114dp"
                android:src="@drawable/logo"
                android:contentDescription="@string/logo"/>
        <TextView
                android:text="SOBRE ONGS: "
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="30dp"
                android:id="@+id/textView"
                android:textStyle="bold"/>

        <TextView
                android:text="ONG é a sigla para organização não governamental. Uma ONG é uma organização que não tem finalidades lucrativas e é formada com o objetivo de fazer trabalhos de auxílio social ou outras questões importantes para a sociedade."
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/textView2"
                android:textStyle="bold"/>

        <TextView
                android:text="As ONG's atuam em todas as áreas ligadas às necessidades sociais que existam. São exemplos: educação, saúde, emprego, formação profissional, assistência social, busca por direitos políticos, questões ambientais e proteção aos direitos dos animais."
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/textView3"
                android:textStyle="bold"/>
        <TextView
                android:text="As ONG's podem realizar atividades de ajuda, como: oferecimento de serviços, orientação jurídica e psicológica, acolhimento, educação, profissionalização e encaminhamento para outros órgãos de atendimento, de acordo com as necessidades dos casos."
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/textView4"
                android:textStyle="bold"/>
        <TextView
                android:text="Caso tenha interesse em se cadastrar sua ONG no nosso sistema, só clicar no botão abaixo e sera direcionado para o nosso site:"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/textView5"
                android:textStyle="bold"/>

        <Button
                android:id="@+id/googleBtn"
                android:text="Cadastre sua ONG!"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D358C95F"
                android:textColor="#fff"/>

    </LinearLayout>

    <android.support.design.widget.NavigationView
            android:id="@+id/menu_lateral"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/menu_lateral_cabecalho"
            app:menu="@menu/menu_lateral">


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
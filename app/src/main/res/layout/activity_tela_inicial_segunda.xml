<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:id="@+id/layourMenuLateral"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fitsSystemWindows="true">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".TelaInicialActivity">

        <include layout="@layout/toolbar"/>
        <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="232dp"
                android:src="@drawable/red_panda"
                android:contentDescription="@string/logo"/>
        <TextView
                android:text="@string/bemvindo"
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="20dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textView"/>

        <TextView
                android:text="@string/saberOV"
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="20dp"
                android:layout_height="55dp"
                android:id="@+id/textView20"/>

        <Button
                android:text="Sobre Ongs"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/button5"
                android:backgroundTint="@color/colorPrimary"/>
        <Button
                android:text="Sobre VoluntÃ¡rios"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/button4"
                android:backgroundTint="@color/colorPrimary"/>



        <TextView
                android:text="@string/tipoOV"
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:id="@+id/textView2"/>

        <Button
                android:text="@string/ong2"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:backgroundTint="@color/colorPrimary"/>

        <Button
                android:text="@string/voluntario"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:backgroundTint="@color/colorPrimary"/>


    </LinearLayout>

    <android.support.design.widget.NavigationView
            android:id="@+id/menu_lateral"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/menu_lateral_cabecalho"
            app:menu="@menu/menu_lateral_after">


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

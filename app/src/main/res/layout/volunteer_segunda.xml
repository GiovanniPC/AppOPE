<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/layourMenuLateral"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fitsSystemWindows="true">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".TelaInicialActivity">

        <include layout="@layout/toolbar"/>
        <ImageView
                android:id="@+id/imageView"
                android:layout_width="184dp"
                android:layout_height="183dp"
                android:layout_marginEnd="114dp"
                android:layout_marginStart="114dp"
                android:src="@drawable/logo"
                android:contentDescription="@string/logo"/>
        <TextView
                android:text="@string/volunteerpagina"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="50dp" android:id="@+id/textView" android:textStyle="bold"/>

        <Button
                android:text="Saúde"
                android:layout_height="wrap_content"
                android:layout_width="220dp"
                android:background="#A94523"
                android:textColor="#fff"
                android:id="@+id/saude"
                android:layout_gravity="center"/>

        <Button
                android:text="Cultura"
                android:layout_height="wrap_content"
                android:layout_width="220dp"
                android:background="#A94523"
                android:textColor="#fff"
                android:id="@+id/cultura"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        <Button
                android:text="Habitação"
                android:layout_height="wrap_content"
                android:layout_width="220dp"
                android:background="#A94523"
                android:textColor="#fff"
                android:id="@+id/habitacao"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        <Button
                android:text="Meio Ambiente"
                android:layout_height="wrap_content"
                android:layout_width="220dp"
                android:background="#A94523"
                android:textColor="#fff"
                android:id="@+id/meioambiente"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        <Button
                android:text="Desenvolvimento e defesa de direitos"
                android:layout_height="wrap_content"
                android:layout_width="220dp"
                android:background="#A94523"
                android:textColor="#fff"
                android:id="@+id/defesadireito"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>
        <Button
                android:text="Educação e Pesquisa"
                android:layout_height="wrap_content"
                android:layout_width="220dp"
                android:background="#A94523"
                android:textColor="#fff"
                android:id="@+id/educacao"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        <Button
                android:text="Assistência social"
                android:layout_height="wrap_content"
                android:layout_width="220dp"
                android:background="#A94523"
                android:textColor="#fff"
                android:id="@+id/assistenciasocial"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>
    </LinearLayout>

    <android.support.design.widget.NavigationView
            android:id="@+id/menu_lateral"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/menu_lateral_cabecalho"
            app:menu="@menu/menu_lateral_after">


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
